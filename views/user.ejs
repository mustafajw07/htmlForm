<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>User</title>
    <style>
      table,
      th,
      td {
        border: 1px solid black;
        border-collapse: collapse;
      }

      th,
      td {
        padding: 10px;
      }

      th {
        text-align: center;
      }
    </style>
  </head>
  <body>
    <% if(users.length) { %> <% users.forEach((user) => { %>
    <table>
      <thead>
        <tr>
          <th>First Name</th>
          <th>Middle Name</th>
          <th>Last Name</th>
          <th>Emails</th>
          <th>Numbers</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td rowspan="6"><%= user.name.firstName %></td>
          <td rowspan="6"><%= user.name.middleName %></td>
          <td rowspan="6"><%= user.name.lastName %></td>
        </tr>
        <tr>
            <td><%= user.email.email1 %></td>
            <td> <%= user.number.number1 %></td>
        </tr>
        <tr>
            <td><%= user.email.email2 %></td>
            <td> <%= user.number.number2 %></td>
        </tr>
        <tr>
            <td><%= user.email.email3 %></td>
            <td> <%= user.number.number3 %></td>
        </tr>
        <tr>
            <td><%= user.email.email4 %></td>
            <td> <%= user.number.number4 %></td>
        </tr>
        <tr>
            <td><%= user.email.email5 %></td>
            <td> <%= user.number.number5 %></td>
        </tr>
        <% }) %> 
        <% } else { %>
        <tr>
          <td>
            <span> No user found</span>
          </td>
        </tr>
        <% } %>
      </tbody>
    </table>
  </body>
</html>
